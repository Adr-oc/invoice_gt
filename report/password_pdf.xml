<?xml version="1.0"?>
<odoo>
	<data>
		<template id="contrasena_proveedor">
			<t t-call="web.basic_layout">				
				<div class="page"> 
					<div class="d-flex" style="margin-bottom:15px; justify-content: center; align-items: center;">
						<div class="col-3">
							<img t-if="current_company_id.logo" t-att-src="image_data_uri(current_company_id.logo)" alt="Logo"  style="width: 150px; "/>
						</div>
						<div class="col-6" style="text-align: center; font-weight: bold; margin-top: 65px">
							CONTRASEÑA PARA REVISION DE PAGO
						</div>
						<div class="col-3" style=" float:right margin-top: 75px; margin-top: 65px">
							<div>Fecha:  <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')"/></div>
							<div>Hora:   <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%H:%M')"/></div>
						</div>
					</div>			
					<div class="d-flex" style="border-radius: 10px; border:solid 1px black; padding:5px;">
						<div class="col-2">
							<div>Nit</div>
							<div>Proveedor</div>
						</div>
						<div class="col-6">
							<t t-set="nit" t-value="nit"/>
							<div><span   t-esc="nit"/></div>
							<t t-set="proveedor" t-value="proveedor"/>
							<div><span  t-esc="proveedor"/></div>
						</div>							
					</div >
					<div class="d-flex" style="font-weight: bold; border-radius: 10px; border:solid 1px black; margin-top:10px; padding:2px; text-align: center; margin-bottom:10px;">
						<div class="col-4">
							Serie y no. Factura
						</div>
						<div class="col-2">
							Fecha 
						</div>
						<div class="col-2">
							Monto $.
						</div>
						<div class="col-2"> 
							Monto Q.
						</div>
						<div class="col-2">
							File
						</div>
					</div>
					<t t-set="body" t-value="body"/>
					<t t-foreach="body" t-as="h">
						<div class="d-flex" style="text-align: center;">
							<div class="col-4">
								<span  t-esc="h['codigo']"/>
							</div>
							<div class="col-2">
								<span  t-esc="h['fecha']"/>
							</div>
							<t t-if="h['moneda'] == 2">
								<div class="col-2">
									<span>
										$.
									</span>
									<span t-esc="h['total']" />
								</div>
							</t>
							<t t-if="h['moneda'] != 2">
								<div class="col-2">
									<span>
										$. 0.00
									</span>
								</div>
							</t>
							<t t-if="h['moneda'] == 170">
								<div class="col-2">
									<span>
										Q.
									</span>
									<span t-esc="h['total']" />
								</div>
							</t>
							<t t-if="h['moneda'] != 170">
								<div class="col-2">
									<span>
										Q. 0.00
									</span>
								</div>
							</t>
							<div class="col-2">
								<span  t-esc="h['file']"/>
							</div>
						</div>								
					</t>
					<div style="margin:10px; margin-top:40px;">
						<t t-set="TotalQ" t-value="TotalQ"/>
						<div>Total Quetzales: Q. <span t-esc="TotalQ"/></div>
						<t t-set="TotalUSD" t-value="TotalUSD"/>
						<div>Total Dolares:   $. <span t-esc="TotalUSD"/> </div>
					</div>
					<t t-set="fecha_pago" t-value="fecha_pago"/>
					<div style="border-radius: 10px; border:solid 1px black; margin-top:40px; padding:2px;">Fecha estimada de pago:  <span t-esc="fecha_pago"/></div>
					<t t-set="contra" t-value="contra"/>
					<div style="border-radius: 10px; border:solid 1px black; margin-top:20px; padding:2px;">Contraseña:  <span t-esc="contra"/></div>
				</div>
				<div class="footer">
					<img t-if="current_company_id.logo_footer" t-att-src="image_data_uri(current_company_id.logo_footer)" alt="Logo"/>
				</div>
			</t>
		</template>
	</data>
</odoo>