<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="custom_invoice_template" inherit_id="account.report_invoice_document">
            <!-- Add reference fields after the informations div -->
            <xpath expr="//div[@id='informations']" position="after">
                <div class="row mb-4">
                    <div class="col-6">
                        <div style="font-weight:700">Ref 1: <span t-esc="o.referencia_1" style="font-weight:500"/></div>
                    </div>
                    <div class="col-6">
                        <div style="font-weight:700">Ref 2: <span t-esc="o.referencia_2" style="font-weight:500"/></div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//p[@name='payment_communication']" position="after">
                <div style="font-weight:700; margin: 30px 0">
                    Observaciones
                    <span t-esc="o.referencia_3" style="font-size: 15px; display:block; font-weight:500; padding: 5px 0"/>
                </div>
            </xpath>

        </template>
    </data>
</odoo>