<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="button_time.ListView.Buttons" t-inherit="web.ListView.Buttons">
        <xpath expr="//*[@class='btn btn-primary o_list_button_add']" position="after">
            <button type="button" class="btn btn-primary" style="margin-left: 10px;"
                t-on-click="OnTestClick">
                Cargar Pagos
            </button>
            <button type="button" class="btn btn-secondary" style="margin-left: 10px;"
                t-on-click="OnNewButtonClick">
                Cargar Pagos (Agrupados)
            </button>
        </xpath>
    </t>
</templates>