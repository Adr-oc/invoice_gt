<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="payment_form_view" model="ir.ui.view">
            <field name="name">account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="partner_bank_id" position="after">
                    <field name="boleta"/>
                    <field name="banco"/>
                </field>
            </field>
        </record>

        <record id="payment_tree_view" model="ir.ui.view">
            <field name="name">account.payment.tree</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="boleta" optional="show"/>
                </field>
            </field>
        </record>

        <record id="detailed_payment_report" model="ir.actions.server">
            <field name="name">Reporte de pagos</field>
            <field name="model_id" ref="model_account_payment"/>
            <field name="binding_model_id" ref="invoice_gt.model_account_payment"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                    action = records.detailed_payment_report()
            </field>
        </record>
    </data>
</odoo>
   