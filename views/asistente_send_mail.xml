<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="asistente_send_mail" model="ir.ui.view">
        <field name="name">invoice_gt.asistente_send_mail</field>
        <field name="model">send.mail.wizzard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Seleccione un rango de fecha" create="false">
                <group>
                    <field name="mail_to" widget="many2many_tags_email"
                        options="{'no_create': True, 'no_edit': True}" />
                    <field name="subject" />
                </group>
                <field name="body" style="border:none;" options="{'style-inline': true}"
                    widget="html" />

                <group>
                    <field name="file_mail" widget="many2many_binary" string="Adjuntar" nolabel="1"
                        colspan="2" />
                </group>
                <footer>
                    <button name="send_notifications" string="Enviar" type="object"
                        class="oe_highlight" />
                    <!-- <button icon="fa-lg fa-save" type="object" name="save_new_tmpl_mail"
                    string="Save as new template" class="pull-right btn-secondary" /> -->
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="send_mail_action">
        <field name="name">Enviar estado de cuenta</field>
        <field name="res_model">account.move</field>
        <field name="type">ir.actions.act_window</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="asistente_send_mail" />
    </record>


    <record id="account_invoice_send_mail" model="ir.ui.view">
        <field name="name">account.out.invoice.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree" />
        <field name="arch" type="xml">
            <xpath expr="//list/header/button[@name='action_force_register_payment']" position="after">
                <button name="open_email" type="object" string="Enviar correo"
                    class="oe_highlight"/>
            </xpath>
        </field>
    </record>

</odoo>