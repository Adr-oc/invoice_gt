<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="company_bank_view" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Informacion de banco">
                        <group string="Cuenta Quetzales">
                            <group>
                                <field name="cuenta" widget="Many2one" />
                            </group>
                        </group>
                        <group string="Cuenta Dolares">
                            <group>
                                <field name="cuenta_dolar" widget="Many2one" />
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
   